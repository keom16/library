    <title>{% block title %}{% endblock %}</title>
</head>

<body>

<header>
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>
            <li><a href="{{ path('books_list') }}">Nos livres</a></li>
            <li><a href="{{ path('authors_list') }}">Nos auteurs</a></li>
            <li><a href="{{ path('admin_author_insert_form') }}">Espace Admin</a></li>

            <li>
                <form action="{{ path('author_search') }}" method="GET"><input class="searchbar" id="search" type="text" placeholder="recherche" name="search"></form>
            </li>
        </ul>
    </nav>

</header>

<main>
    <div class="return">{% block return %}{% endblock %}</div>
    <h1 class="presentation"> {% block categorie %}{% endblock %}</h1>
    <div class="contenu">
        {% block content %}
        {% endblock  %}

    </div>
</main>




<footer>

</footer>
