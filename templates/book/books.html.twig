{% extends 'base.html.twig' %}

{% block title %}
    Nos livres
{% endblock %}

{% block categorie %}
    Retrouvez la liste des livres :
{% endblock  %}

{% block content %}
    {% for book in books %}
        <article class="preview">
            <h2>Titre : {{ book.title }}</h2>
            {% if book.author is not null %}
                <p> de : {{ book.author.firstName }} {{ book.author.Name }}</p>
            {% else %}
                <p>Auteur non renseigné</p>
            {% endif %}
                <p>Catégorie : {{ book.style }} </br> Nombre de page : {{ book.nbPages }} </br> Disponibité :
                {% if book.inStock %} {# égal à if book.inStock == true #}
                    disponible
                {% else %} {# égal à else book.inStock == false#}
                    non-disponible
                {% endif %}</p>
                 <a href="{{ path('book', {'id':book.id}) }}" class="button">consulter</a>
        </article>
    {% endfor %}
{% endblock %}
