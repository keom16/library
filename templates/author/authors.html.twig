{% endblock %}


{% block categorie %}
    Retrouvez la liste des auteurs
{% endblock  %}

{% block content %}
    {% for author in authors %}
        <article class="preview">
            <h2>{{ author.firstName }} {{ author.name }}</h2>
            <p>n√© le {{ author.birthDate|date("d/m/Y")}}  {% if author.deathDate is not null %}et mort le {{ author.deathDate|date("d/m/Y") }}{% endif %}</p>
            <a href="{{ path('author_list', {'id':author.id}) }}" class="button">consulter</a>
            <a href="{{ path('author_delete', {'id':author.id}) }}" class="button">supprimer</a>
        </article>
    {% endfor %}
{% endblock %}